<% include ../partials/header %>

<div class="container" id="comment-edit-form">
    <div class="row">
        <h1>Edit Comment</h1>
        <div>
            <form class="" action="/campgrounds/<%=campground_id %>/comments/<%= comment._id %>?_method=PUT" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= comment.text %>" name="comment[text]">
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>
