<% include ../partials/header %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1><i class="fas fa-campground"></i> Welcome to YelpCamp</h1>
            <p>View our handpicked campgrounds from all over the world</p>
            <p>
                <a href="/campgrounds/new" class="btn btn-primary btn-lg">Add New Campground</a>
            </p>
        </div>
    </header>

      <div class="row text-center">
        <% campgrounds.forEach(function(campground) { %>
          <div class="col-md-4 col-sm-6">
            <div class="card">
              <img class="card-img-top" src=<%= campground.image %>" alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title"><%= campground.name %></h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
              </div>
            </div>
          </div>
        <% }); %>
      </div>

    <div class="row text-center flexthis">
        <% campgrounds.forEach(function(campground) { %>
            <div class="col-md-4 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= campground.image %>">
                    <div class="caption">
                        <h4><%= campground.name %></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>
<% include ../partials/footer %>
